<UserControl x:Class="CCity.View.GameWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCity.View"
             mc:Ignorable="d" 
             d:DesignHeight="550"
             d:DesignWidth="900"
             Background="White"
             FontFamily="Arial">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="102"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            
            <!--Sidebar-->
            <Grid Grid.Column="0" Background="#eee">
                <WrapPanel Margin="7" VerticalAlignment="Top">
                    <Button Width="40" Height="40" Margin="2">Crsr</Button>
                    <Button Width="40" Height="40" Margin="2">Lkzn</Button>
                    <Button Width="40" Height="40" Margin="2">Kkdzn</Button>
                    <Button Width="40" Height="40" Margin="2">Iprzn</Button>
                    <Button Width="40" Height="40" Margin="2">Pd</Button>
                    <Button Width="40" Height="40" Margin="2">Fd</Button>
                    <Button Width="40" Height="40" Margin="2">Stdm</Button>
                    <Button Width="40" Height="40" Margin="2">Pp</Button>
                    <Button Width="40" Height="40" Margin="2">Pl</Button>
                    <Button Width="40" Height="40" Margin="2">Road</Button>
                    <Button Width="40" Height="40" Margin="2">Bldzr</Button>
                </WrapPanel>
                <StackPanel Margin="5" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="0 5">
                    <StackPanel Orientation="Horizontal" Background="White" Margin="0 5">
                            <TextBlock Width="42" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding ResidentialTax, StringFormat={}{0}%}" TextAlignment="Center"/>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="30">
                            <Button Height="14">+</Button>
                            <Button Height="14">-</Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Background="White" Margin="0 5">
                            <TextBlock Width="42" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding CommercialTax, StringFormat={}{0}%}" TextAlignment="Center"/>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="30">
                            <Button Height="14">+</Button>
                            <Button Height="14">-</Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Background="White" Margin="0 5">
                            <TextBlock Width="42" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding IndustrialTax, StringFormat={}{0}%}" TextAlignment="Center"/>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="30">
                            <Button Height="14">+</Button>
                            <Button Height="14">-</Button>
                        </StackPanel>
                    </StackPanel>
                    </StackPanel>
                    <TextBlock Text="{Binding Speed, StringFormat='🕜: {0}'}" Margin="0 0 0 5"/>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                        <!--<local:CustomButton Style="{StaticResource SpeedButtonStyle}" CornerRadius="12 0 0 12">-</local:CustomButton>
                        <local:CustomButton Style="{StaticResource SpeedButtonStyle}">||</local:CustomButton>
                        <local:CustomButton Style="{StaticResource SpeedButtonStyle}" CornerRadius="0 12 12 0">+</local:CustomButton>-->
                        <Button Width="24" Height="24">-</Button>
                        <Button Width="24" Height="24" Content="||" FontWeight="Bold">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPaused}" Value="True">
                                            <Setter Property="Content" Value="▶"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Width="24" Height="24">+</Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
            
            <!--Center-->
            <Grid Grid.Column="1">
                <Grid>
                    <StackPanel Orientation="Vertical" Background="#eee" Width="150" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="7">
                        <Button Width="20" Height="20" HorizontalAlignment="Right">×</Button>
                    </StackPanel>
                </Grid>
                <Grid>
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Fields}">
                        
                    </ItemsControl>
                </Grid>
            </Grid>
        </Grid>


        <!--Statusbar-->
        <Grid Grid.Row="1" Background="#EEE">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="{Binding CityName}" Margin="7"/>
                <TextBlock Text="{Binding MayorName}" Margin="7"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding Population, StringFormat='🤵 {0}'}" Margin="7"/>
                <TextBlock Text="{Binding Satisfaction, StringFormat='👍 {0}%'}" Margin="7"/>
                <TextBlock Text="{Binding Budget, StringFormat='💎 {0}'}" Margin="7"/>
                <TextBlock Text="{Binding Date, StringFormat='📆 {0}'}" Margin="7"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
